{
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["\\.yaml$"],
      "matchStrings": [
        "version:\\s?\"(?<currentValue>.*?)\"\\s*\\n\\s*chart:\\s*\\n\\s*spec:\\s*\\n\\s*chart:\\s*(?<depName>dex)"
      ],
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver"
    }
  ],
  "helm": {
    "repositories": [
      {
        "name": "dex",
        "url": "https://charts.dexidp.io"
      }
    ]
  }
}