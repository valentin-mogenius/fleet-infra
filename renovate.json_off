{
    "extends": ["config:base"],
    "packageRules": [
      {
        "matchManagers": ["regex"],
        "matchPackagePatterns": [".*"],
        "matchDepTypes": ["helm"],
        "matchUpdateTypes": ["major"],
        "regexManagers": [
          {
            "fileMatch": ["^.*helm-release\\.yaml$"],
            "matchStrings": [
              "version: \"(?<currentValue>.+)\""
            ],
            "depNameTemplate": "helm-chart",
            "datasourceTemplate": "helm",
            "versioningTemplate": "semver"
          }
        ]
      }
    ]
  }